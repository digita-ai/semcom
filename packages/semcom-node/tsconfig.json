{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
        ],
        "paths": {
            "@digita-ai/semcom-core": [
                "./node_modules/@digita-ai/semcom-core"
            ],
            "@digita-ai/semcom-core/*": [
                "./node_modules/@digita-ai/semcom-core/*"
            ],
        },
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}